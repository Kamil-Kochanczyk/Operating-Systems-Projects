#
# make: clean, tar, 9
#
#=========================================================================
DIR = `basename $(CURDIR)`
#------------------------
P = Program
#----------------------
EXECP = $(P)

OBJP = $(P).o
#############################
COFLAGS = -Wall
LDFLAGS = -Wall
CO = gcc
LD = $(CO)
ENDFLAGS = -lpthread
#############################
9:
	$(CO) $(COFLAGS) $(P).c -o $(P) $(ENDFLAGS)
#############################
.PHONY: clean tar
#=========================================================================
EXECUTABLES = $(EXECP)
#=========================================================================
clean:                                                     
	rm -f *.o  *~ $(EXECUTABLES)
#=========================================================================
tar: clean
	(cd ../; tar -cvzf $(DIR).tar.gz  $(DIR))
#=========================================================================

