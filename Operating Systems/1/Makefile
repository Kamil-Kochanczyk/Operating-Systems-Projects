#
# make: all, clean, tar, a, b, c, d, e
#
#=========================================================================
DIR = `basename $(CURDIR)`
#------------------------
NAME0 = DisplayInfo
NAME1 = zad1_a
NAME2 = zad1_b
NAME3 = zad1_c
NAME4 = zad1_d
NAME5 = zad1_e
#----------------------
OBJS0 = $(NAME0).o
#----------------------
EXEC1 = $(NAME1)
OBJS1 = $(NAME1).o
#----------------------
EXEC2 = $(NAME2)
OBJS2 = $(NAME2).o
#----------------------
EXEC3 = $(NAME3)
OBJS3 = $(NAME3).o
#----------------------
EXEC4 = $(NAME4)
OBJS4 = $(NAME4).o
#----------------------
EXEC5 = $(NAME5)
OBJS5 = $(NAME5).o
#----------------------
HEADER = $(NAME0).h
#------------------------
FILE = Tree
#############################
COFLAGS = -Wall -O
LDFLAGS = -Wall -O
CO = gcc
LD = $(CO)
#############################
%.o: %.c
	$(CO) $(COFLAGS) -c $<
#############################
.PHONY: all
all: $(EXEC1) $(EXEC2) $(EXEC3) $(EXEC4) $(EXEC5)
#############################
$(EXEC1): $(OBJS0) $(OBJS1)
	 $(LD) -o $@ $(LDFLAGS) $^
#############################
$(EXEC2): $(OBJS0) $(OBJS2)
	 $(LD) -o $@ $(LDFLAGS) $^
#############################
$(EXEC3): $(OBJS0) $(OBJS3)
	 $(LD) -o $@ $(LDFLAGS) $^
#############################
$(EXEC4): $(OBJS0) $(OBJS4)
	 $(LD) -o $@ $(LDFLAGS) $^
#############################
$(EXEC5): $(OBJS0) $(OBJS5)
	 $(LD) -o $@ $(LDFLAGS) $^
#############################
$(OBJS1): $(HEADER)
#############################
$(OBJS2): $(HEADER)
#############################
$(OBJS3): $(HEADER)
#############################
$(OBJS4): $(HEADER)
#############################
$(OBJS5): $(HEADER)
#############################
a: $(EXEC1)
	./$(EXEC1)
#############################
b: $(EXEC2)
	./$(EXEC2)
#############################
c: $(EXEC3)
	./$(EXEC3)
#############################
d: $(EXEC4)
	./$(EXEC4)
#############################
e: $(EXEC5)
	./$(EXEC5)
#############################
.PHONY: clean tar
# Porzadki
EXECS = $(EXEC1) $(EXEC2) $(EXEC3) $(EXEC4) $(EXEC5)
clean:                                                     
	rm -f *.o  *~ $(EXECS) $(FILE)
#=========================================================================
# Archiwizacja i kompresja
tar: clean
	(cd ../; tar -cvzf $(DIR).tar.gz  $(DIR) )
#=========================================================================
