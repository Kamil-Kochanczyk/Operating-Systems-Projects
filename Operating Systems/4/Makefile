#
# make: clean, tar, 4, run4
#
#=========================================================================
DIR = `basename $(CURDIR)`
#------------------------
NAME = 4
IN = 
OUT = 
#----------------------
EXEC = $(NAME)
OBJS = $(NAME).o
#############################
COFLAGS = -Wall -O
LDFLAGS = -Wall -O
CO = gcc
LD = $(CO)
#############################
$(OBJS): $(NAME).c
	$(CO) $(COFLAGS) -c $<
#############################
$(EXEC): $(OBJS)
	 $(LD) -o $@ $(LDFLAGS) $^
#############################
run4:
	(./$(EXEC) $(IN) $(OUT); diff -s $(IN) $(OUT))
#############################
.PHONY: clean tar
#=========================================================================
EXECS = $(EXEC)
#=========================================================================
clean:                                                     
	rm -f *.o  *~ $(EXECS)
#=========================================================================
tar: clean
	(cd ../; tar -cvzf $(DIR).tar.gz  $(DIR))
#=========================================================================
